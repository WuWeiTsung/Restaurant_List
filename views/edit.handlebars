<div class="container">
  <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
    <div class="form-group">
      <label>Restaurant Name</label>
      <input type="text" class="form-control" placeholder="Restaurant Name" name="name" value="{{restaurant.name}}">
    </div>

    <div class="form-group">
      <label>Restaurant English Name</label>
      <input type="text" class="form-control" placeholder="Restaurant English Name" name="name_en"
        value="{{restaurant.name_en}}">
    </div>

    <div class=" form-group">
      <label>Restaurant Category</label>
      <input type="text" class="form-control" placeholder="Restaurant Category" name="category"
        value="{{restaurant.category}}">
    </div>

    <div class="form-group">
      <label>Restaurant Image Link</label>
      <input type="text" class="form-control" placeholder="Restaurant Image Link" name="image"
        value="{{restaurant.image}}">
    </div>

    <div class="form-group">
      <label>Restaurant Address</label>
      <input type="text" class="form-control" placeholder="Restaurant Address" name="location"
        value="{{restaurant.location}}">
    </div>

    <div class="form-group">
      <label>Restaurant Phone Number</label>
      <input type="text" class="form-control" placeholder="Restaurant phone Nuumber" name="phone"
        value="{{restaurant.phone}}">
    </div>

    <div class="form-group">
      <label>Restaurant Google Map</label>
      <input type="text" class="form-control" placeholder="Restaurant google_map" name="google_map"
        value="{{restaurant.google_map}}">
    </div>

    <div class="form-group">
      <label>Restaurant Rating</label>
      <input type="text" class="form-control" placeholder="Restaurant Rating" name="rating"
        value="{{restaurant.rating}}">
    </div>

    <div class="form-group">
      <label>Restaurant Description</label>
      <input type="text" class="form-control" placeholder="Restaurant Description" name="description"
        value="{{restaurant.description}}">
    </div>
    <div class="d-flex justify-content-around">
      <button type="submit" class="btn btn-success btn-lg">Save</button>
      <a href="/" class="btn btn-primary btn-lg">Back</a>
    </div>
  </form>
</div>